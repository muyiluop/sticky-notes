# ===================================================================
# Server Configuration
# ===================================================================
PORT=3000
HOST=0.0.0.0

# ===================================================================
# Storage Configuration
# ===================================================================
# Options: 'file' or 'sqlite'
STORAGE_TYPE=file

# Base path for data storage (relative to server.js or absolute path)
DATA_BASE_PATH=./data

# ===================================================================
# CORS Configuration
# ===================================================================
# Set to '*' for all origins, or specify allowed origins
# For multiple origins, use comma-separated values
CORS_ORIGIN=*

# ===================================================================
# Authentication (Optional)
# ===================================================================
# Set to 'true' to enable bearer token authentication
AUTH_ENABLED=true

# If AUTH_ENABLED is true, set your bearer token here
# Client must send: Authorization: Bearer <your-token>
AUTH_TOKEN=your-secret-token-change-this

# ===================================================================
# Example configurations for different scenarios
# ===================================================================

# Development (no auth, allow all origins):
# AUTH_ENABLED=false
# CORS_ORIGIN=*

# Production (with auth, specific origins):
# AUTH_ENABLED=true
# AUTH_TOKEN=your-very-secret-token-change-this
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# SQLite storage:
# STORAGE_TYPE=sqlite
# DATA_BASE_PATH=/var/lib/sticky-notes

# File storage:
# STORAGE_TYPE=file
# DATA_BASE_PATH=/var/lib/sticky-notes
